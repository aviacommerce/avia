<%= form_for @changeset, @action, [as: :permission], fn f -> %>
<div class="form-group row ">
  <%= input f, :code, nil, description: "Code for this permission.", is_horizontal: true %>
</div>
<div class="form-group row ">
  <%= input f, :description, nil, description: "Add a short description for this permission.", is_horizontal: true %>
</div>
<div class="form-group row stickformbutton">
  <div class="col-sm-10">
    <%= submit "Submit", class: "btn btn-primary submit-btn float-right" %>
    <%= link("Cancel", to: permission_path(@conn, :index), class: "btn btn-secondary btn-outline-secondary float-left", type: "button") %>
  </div>
</div>
<% end %>
