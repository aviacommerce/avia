<div class="list-container">
  <div class="row m-0 list-header">
    <div class="col-10 p-0">
      <h2>Permissions</h2>
    </div>
    <div class="col-2 p-0 float-right text-right">
      <%= link(raw("<i class='fas fa-plus'></i> Add a Permission"),
        to: permission_path(@conn, :new),
        class: "btn btn-primary float-right"
      ) %>
    </div>
  </div>
  <div class="row m-0 list">
    <%= for permission <- @permissions do %>
      <div class="table-contaner col-12 p-3 mb-2">
        <div class="row">
          <div class="col-11 pl-0">
            <div class="media">
              <div class="checkbox mx-3">
                <label>
                  <input type="checkbox" value="" />
                  <span class="cr"><i class="cr-icon fa fa-check"></i></span>
                </label>
              </div>
              <div class="media-body">
                <%= permission.code %>
              </div>
            </div>
          </div>
          <div class="col-1">
            <div class="dropdown col-12 p-0 float-right options-container">
              <a
                class="p-2 dropdown-toggle options"
                href="#"
                role="button"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
              >
                <i class="fa fa-cog"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-right">
                <%= link("edit",
                  to: permission_path(@conn, :edit, permission.id),
                  class: "dropdown-item"
                ) %>
                <%= link("delete",
                  to: permission_path(@conn, :delete, permission.id),
                  method: :delete,
                  data: [confirm: "Are you sure you want to delete?"],
                  class: "dropdown-item"
                ) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
