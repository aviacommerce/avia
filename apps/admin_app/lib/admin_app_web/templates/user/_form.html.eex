<%= form_for @changeset, @action, [as: :user],
  fn f -> %>
<div class="form-group row ">
  <%= input f, :first_name, nil, is_horizontal: true %>
</div>
<div class="form-group row ">
  <%= input f, :last_name, nil, is_horizontal: true %>
</div>
<div class="form-group row ">
  <%= input f, :email, nil, is_horizontal: true %>
</div>
<div class="form-group row ">
  <%= input f, :password, nil, is_horizontal: true %>
</div>
<div class="form-group row ">
  <%= input f, :password_confirmation, nil, is_horizontal: true, description: "Should be same as Password." %>
</div>
<div class="form-group row ">
  <%= select_input f, :role_id, formatted_list(:role), nil, is_horizontal: true, description: "Different users have different access depending on the role." %>
</div>
<div class="form-group row stickformbutton">
  <div class="col-sm-10">
    <%= submit "Submit", class: "btn btn-primary submit-btn float-right" %>
    <%= link("Cancel", to: user_path(@conn, :index), class: "btn  btn-secondary btn-outline-secondary float-left", type: "button") %>
  </div>
</div>
<% end %>
